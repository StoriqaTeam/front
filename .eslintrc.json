{
  "parser": "babel-eslint",
  "extends": [
    "react-app",
    "prettier/react",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-console": "error",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": [
      "warn",
      {
        "aspects": [
          "invalidHref"
        ]
      }
    ],
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": [
          "Label"
        ],
        "required": {
          "every": [
            "id"
          ]
        },
        "allowChildren": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.stories.js"
        ]
      }
    ],
    "import/prefer-default-export": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  }
}